@model PizzaCategory

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="d-flex align-items-center">
                <h1 class="mt-3 mb-3">Dettagli post</h1>
            </div>
            <div class="post-single-image-container">
                <img src="@Model.Pizza.Image">
            </div>
            <p>
                <strong>Titolo:</strong>
                @Model.Pizza.Title
            </p>
            <p>
                <strong>Contenuto:</strong>
                @Model.Pizza.Description
            </p>
        </div>
        <div>
            
            @foreach (Category category in Model.Categories)
            {
                if(category.Id == Model.Pizza.CategoryId)
                {
                    <p>
                        <strong>Categoria di pizza:</strong>
                        @category.Title</p>
                }
            }
            
        </div>
    </div>
</div>
